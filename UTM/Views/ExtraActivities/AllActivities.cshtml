@{
    ViewData["Title"] = "Toate activitatile";
    Layout = "_ExtraActivitiesLayout";
}


<div class="card">
    <div class="card-body">
        @{
            var random = new Random();
            var activities = random.Next(5, 20);
        }


        <div class="accordion" id="accordionExample">
            @for (var i = 1; i <= activities; i++)
            {
                <div class="card">
                    <div class="card-header" id="heading-@i">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse-@i" aria-expanded="false" aria-controls="collapse-@i">
                                Activitatea @i
                            </button>
                            <span type="button" class="btn btn-primary float-right">
                                Participanti <span class="badge badge-light">@random.Next(0, 1000)</span>
                            </span>
                        </h2>
                    </div>

                    <div id="collapse-@i" class="collapse" aria-labelledby="heading-@i">
                        <div class="card-body">
                            Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. 3 wolf moon officia aute, non cupidatat skateboard dolor brunch. Food truck quinoa nesciunt laborum eiusmod. Brunch 3 wolf moon tempor, sunt aliqua put a bird on it squid single-origin coffee nulla assumenda shoreditch et. Nihil anim keffiyeh helvetica, craft beer labore wes anderson cred nesciunt sapiente ea proident. Ad vegan excepteur butcher vice lomo. Leggings occaecat craft beer farm-to-table, raw denim aesthetic synth nesciunt you probably haven't heard of them accusamus labore sustainable VHS.
                           <br/>
                            <a href="#" class="btn btn-dark">Participa</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
